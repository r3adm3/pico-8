pico-8 cartridge // http://www.pico-8.com
version 33
__lua__

function _init()
	player={
	 x=1,
	 y=1,
	 }
	 
	enemy={
	 a=rnd(127),
	 b=rnd(127),
	 }
end


function _update()
 if btn(⬇️) then
 	player.y=player.y+1
 	enemy.b=enemy.b-1
 end
 if btn(⬆️) then
  player.y=player.y-1
  enemy.b=enemy.b+1
 end
 if btn(⬅️) then
  player.x=player.x-1
  enemy.a=enemy.a+1
 end
 if btn(➡️) then
  player.x=player.x+1
  enemy.a=enemy.a-1
 end
end

function _draw()
	cls(1)
	pset(player.x,player.y,rnd(16))
	pset(enemy.a,enemy.b,2)
end


